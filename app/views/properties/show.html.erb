<main class="mx-auto max-w-7xl sm:px-6 sm:pt-16 lg:px-8">
  <div class="mx-auto max-w-2xl lg:max-w-none">
    <!-- Property -->
    <div class="lg:grid lg:grid-cols-2 lg:items-start lg:gap-x-8">
      <!-- Image gallery -->
      <div class="flex flex-col-reverse">
        <!-- Image selector -->
        <% if @property.images.attached? %>
          <!-- Hidden links for Spotlight.js gallery (for images beyond the 4 thumbnails) -->
          <% if @property.images.count > 4 %>
            <div class="hidden">
              <% @property.images.offset(4).each_with_index do |image, index| %>
                <a href="<%= url_for(image) %>" 
                   class="spotlight"
                   data-group="property-gallery"
                   data-title="<%= @property.title %> - Imagem <%= index + 5 %>">
                </a>
              <% end %>
            </div>
          <% end %>

          <div class="mx-auto mt-6 hidden w-full max-w-2xl sm:block lg:max-w-none">
            <div class="grid grid-cols-4 gap-6" aria-orientation="horizontal" role="tablist">
              <% @property.images.limit(4).each_with_index do |image, index| %>
                <a href="<%= url_for(image) %>" 
                   class="spotlight relative flex h-24 cursor-pointer items-center justify-center rounded-md bg-white text-sm font-medium text-gray-900 uppercase hover:bg-gray-50 focus:ring-3 focus:ring-indigo-500/50 focus:ring-offset-4 focus:outline-hidden image-thumb"
                   data-image-url="<%= url_for(image) %>"
                   data-group="property-gallery"
                   data-title="<%= @property.title %> - Imagem <%= index + 1 %>"
                   aria-label="Ver imagem <%= index + 1 %>">
                  <span class="absolute inset-0 overflow-hidden rounded-md">
                    <%= image_tag image, alt: @property.title, class: "size-full object-cover" %>
                  </span>
                  <span class="pointer-events-none absolute inset-0 rounded-md ring-2 ring-transparent ring-offset-2 hover:ring-indigo-500" aria-hidden="true"></span>
                  <% if index == 3 && @property.images.count > 4 %>
                    <div class="absolute inset-0 bg-black bg-opacity-50 rounded-md flex items-center justify-center">
                      <span class="text-white font-bold text-lg">+<%= @property.images.count - 4 %></span>
                    </div>
                  <% end %>
                </a>
              <% end %>
            </div>
          </div>

          <!-- Main image -->
          <div>
            <div class="main-image-container">
              <a href="<%= url_for(@property.images.first) %>" 
                 class="spotlight"
                 data-group="property-gallery"
                 data-title="<%= @property.title %> - Imagem principal">
                <%= image_tag @property.images.first, 
                    alt: @property.title, 
                    class: "aspect-square w-full object-cover sm:rounded-lg cursor-pointer main-image",
                    id: "mainImage" %>
              </a>
            </div>
          </div>
        <% else %>
          <!-- Placeholder quando não há imagens -->
          <div class="aspect-square w-full bg-gray-200 flex items-center justify-center rounded-lg">
            <div class="text-center">
              <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <p class="mt-2 text-sm text-gray-500">Sem imagens disponíveis</p>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Property info -->
      <div class="mt-10 px-4 sm:mt-16 sm:px-0 lg:mt-0">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900"><%= @property.title %></h1>
        
        <% if @property.featured? %>
          <span class="inline-flex items-center rounded-md bg-yellow-50 px-2 py-1 text-sm font-medium text-yellow-800 ring-1 ring-inset ring-yellow-600/20 mt-2">
            ⭐ DESTAQUE
          </span>
        <% end %>

        <div class="mt-3">
          <h2 class="sr-only">Informações do imóvel</h2>
          <p class="text-3xl tracking-tight text-gray-900">
            <%= number_to_currency(@property.price, unit: "R$ ", separator: ",", delimiter: ".") %>
          </p>
        </div>

        <!-- Property Type and Neighborhood -->
        <div class="mt-3 space-y-2">
          <% if @property.property_type.present? %>
            <div class="flex items-center">
              <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H3m2 0h4m0 0V9a2 2 0 012-2h2a2 2 0 012 2v12" />
              </svg>
              <span class="text-sm font-medium text-gray-900"><%= @property.property_type.humanize %></span>
            </div>
          <% end %>
          
          <div class="flex items-center">
            <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <%= link_to @property.neighborhood.name, 
                neighborhood_path(@property.neighborhood), 
                class: "text-indigo-600 hover:text-indigo-500 font-medium" %>
          </div>
        </div>

        <!-- Property Details Grid -->
        <div class="mt-6">
          <h3 class="text-sm font-medium text-gray-900">Características</h3>
          <dl class="mt-3 grid grid-cols-2 gap-4 sm:grid-cols-4">
            <% if @property.bedrooms.present? && @property.bedrooms > 0 %>
              <div class="border-t border-gray-200 pt-4">
                <dt class="font-medium text-gray-900 flex items-center">
                  <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 21l0-12" />
                  </svg>
                  Quartos
                </dt>
                <dd class="mt-1 text-sm text-gray-500"><%= @property.bedrooms %></dd>
              </div>
            <% end %>
            
            <% if @property.bathrooms.present? && @property.bathrooms > 0 %>
              <div class="border-t border-gray-200 pt-4">
                <dt class="font-medium text-gray-900 flex items-center">
                  <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10v11M20 10v11" />
                  </svg>
                  Banheiros
                </dt>
                <dd class="mt-1 text-sm text-gray-500"><%= @property.bathrooms %></dd>
              </div>
            <% end %>
            
            <% if @property.area_m2.present? && @property.area_m2 > 0 %>
              <div class="border-t border-gray-200 pt-4">
                <dt class="font-medium text-gray-900 flex items-center">
                  <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4" />
                  </svg>
                  Área
                </dt>
                <dd class="mt-1 text-sm text-gray-500"><%= @property.area_formatted %></dd>
              </div>
            <% end %>
            
            <% if @property.garage_spaces.present? %>
              <div class="border-t border-gray-200 pt-4">
                <dt class="font-medium text-gray-900 flex items-center">
                  <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
                  </svg>
                  Garagem
                </dt>
                <dd class="mt-1 text-sm text-gray-500"><%= @property.garage_info %></dd>
              </div>
            <% end %>
          </dl>
        </div>

        <!-- Additional Features -->
        <% if @property.furnished.present? %>
          <div class="mt-6">
            <h3 class="text-sm font-medium text-gray-900">Características Especiais</h3>
            <div class="mt-3">
              <% if @property.furnished? %>
                <span class="inline-flex items-center rounded-full bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
                  <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Mobiliado
                </span>
              <% else %>
                <span class="inline-flex items-center rounded-full bg-gray-50 px-2 py-1 text-xs font-medium text-gray-700 ring-1 ring-inset ring-gray-600/20">
                  Não mobiliado
                </span>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Description -->
        <div class="mt-6">
          <h3 class="sr-only">Descrição</h3>
          <div class="space-y-6 text-base text-gray-700">
            <p><%= simple_format(@property.description) %></p>
          </div>
        </div>

        <!-- Contact buttons -->
        <div class="mt-10 flex space-x-4">
          <button type="button" class="flex max-w-xs flex-1 items-center justify-center rounded-md border border-transparent bg-indigo-600 px-8 py-3 text-base font-medium text-white hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-50 focus:outline-hidden">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
            </svg>
            WhatsApp
          </button>

          <button type="button" class="ml-4 flex items-center justify-center rounded-md px-8 py-3 text-indigo-600 hover:bg-indigo-50 border border-indigo-600">
            <svg class="size-5 mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
            </svg>
            Favoritar
          </button>
        </div>
      </div>
    </div>

    <!-- Map and Contact Section -->
    <section aria-labelledby="contact-heading" class="mt-16 border-t border-gray-200 pt-16">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Map placeholder -->
        <div>
          <h2 id="contact-heading" class="text-2xl font-bold text-gray-900 mb-6">Localização</h2>
          <div class="bg-gray-200 h-96 rounded-lg flex items-center justify-center">
            <div class="text-center">
              <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <p class="mt-2 text-lg text-gray-500">Mapa será integrado aqui</p>
              <p class="text-sm text-gray-400"><%= @property.neighborhood.name %></p>
            </div>
          </div>
        </div>

        <!-- Contact form -->
        <div>
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Entre em Contato</h2>
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700">Nome</label>
              <input type="text" id="name" name="name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" required>
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
              <input type="email" id="email" name="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" required>
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700">Telefone</label>
              <input type="tel" id="phone" name="phone" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700">Mensagem</label>
              <textarea id="message" name="message" rows="4" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" placeholder="Tenho interesse neste imóvel..."></textarea>
            </div>
            
            <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              Enviar Mensagem
            </button>
          </form>
        </div>
      </div>
    </section>

    <!-- Related Properties -->
    <section aria-labelledby="related-heading" class="mt-16 border-t border-gray-200 pt-16">
      <h2 id="related-heading" class="text-2xl font-bold text-gray-900">Imóveis em <%= @property.neighborhood.name %></h2>

      <% if @related_properties.any? %>
        <div class="mt-8 grid grid-cols-1 gap-y-12 sm:grid-cols-2 sm:gap-x-6 lg:grid-cols-4 xl:gap-x-8">
          <% @related_properties.each do |property| %>
            <div class="group">
              <div class="relative">
                <div class="relative h-72 w-full overflow-hidden rounded-lg bg-gray-200">
                  <% if property.images.attached? %>
                    <a href="<%= url_for(property.images.first) %>" 
                       class="spotlight" 
                       data-group="related-property-<%= property.id %>"
                       data-title="<%= property.title %>">
                      <%= image_tag property.images.first, 
                          alt: property.title, 
                          class: "size-full object-cover group-hover:opacity-75" %>
                    </a>
                  <% else %>
                    <div class="flex items-center justify-center h-full">
                      <svg class="h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                    </div>
                  <% end %>
                </div>
                <div class="relative mt-4">
                  <h3 class="text-sm font-medium text-gray-900 truncate">
                    <%= property.title %>
                  </h3>
                  <div class="mt-1 space-y-1">
                    <p class="text-sm text-gray-500"><%= property.neighborhood.name %></p>
                    <% if property.bedrooms.present? && property.bathrooms.present? %>
                      <p class="text-xs text-gray-400">
                        <%= property.bedrooms_bathrooms %>
                        <% if property.area_m2.present? %>
                          • <%= property.area_formatted %>
                        <% end %>
                      </p>
                    <% end %>
                  </div>
                  <% if property.featured? %>
                    <span class="inline-flex items-center rounded-md bg-yellow-50 px-2 py-1 text-xs font-medium text-yellow-800 ring-1 ring-inset ring-yellow-600/20 mt-1">
                      DESTAQUE
                    </span>
                  <% end %>
                </div>
                <div class="absolute inset-x-0 top-0 flex h-72 items-end justify-end overflow-hidden rounded-lg p-4">
                  <div aria-hidden="true" class="absolute inset-x-0 bottom-0 h-36 bg-gradient-to-t from-black opacity-50"></div>
                  <p class="relative text-lg font-semibold text-white">
                    <%= number_to_currency(property.price, unit: "R$ ", separator: ",", delimiter: ".") %>
                  </p>
                </div>
              </div>
              <div class="mt-6">
                <%= link_to "Ver detalhes", property_path(property), 
                    class: "relative flex items-center justify-center rounded-md border border-transparent bg-gray-100 px-8 py-2 text-sm font-medium text-gray-900 hover:bg-gray-200" %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="mt-8 text-center py-12">
          <p class="text-gray-500">Nenhum outro imóvel encontrado neste bairro.</p>
        </div>
      <% end %>
  </div>
</main>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Functionality for changing main image
  const mainImage = document.getElementById('mainImage');
  const mainImageLink = mainImage?.parentElement;
  const thumbnails = document.querySelectorAll('.image-thumb');

  // Switch main image when clicking thumbnails
  thumbnails.forEach(thumb => {
    thumb.addEventListener('click', function(e) {
      // Prevent spotlight from opening when changing main image
      e.preventDefault();
      
      const newImageUrl = this.dataset.imageUrl;
      const newTitle = this.dataset.title;
      
      // Update main image
      mainImage.src = newImageUrl;
      
      // Update main image link for spotlight
      mainImageLink.href = newImageUrl;
      mainImageLink.dataset.title = newTitle;
      
      // Update active thumbnail
      thumbnails.forEach(t => t.querySelector('span:last-child').classList.remove('ring-indigo-500'));
      this.querySelector('span:last-child').classList.add('ring-indigo-500');
    });
  });

  // Set first thumbnail as active by default
  if (thumbnails.length > 0) {
    thumbnails[0].querySelector('span:last-child').classList.add('ring-indigo-500');
  }

  // Initialize Spotlight.js
  if (typeof Spotlight !== 'undefined') {
    Spotlight.init({
      fit: 'contain',
      animation: 'slide',
      theme: 'dark',
      control: ['zoom', 'rotate', 'close'],
      keyboard: true,
      spinner: true,
      title: true,
      description: false,
      counter: true,
      progress: true,
      autohide: true,
      infinite: true
    });
  }
});
</script>